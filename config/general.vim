" ----- General settings -----

" Encoding
set encoding=UTF-8

" Mouse support
set mouse=a

" Change working directory to open buffer
set autochdir

" Number of undo levels
set undolevels=1000

" Backspace behaviour
set backspace=indent,eol,start

" Enable suggestions menu
set wildmenu

" Copy to clipboard
set clipboard=unnamed

" Disable compatibility to old-time vi
set nocompatible

" Hide mode label
set noshowmode
